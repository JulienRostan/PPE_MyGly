<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#BEBEBE"
                android:endColor="#A5A5A5"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#4D4D4D" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#F6F6F6"
                android:endColor="#DDDDDD"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#4D4D4D" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>